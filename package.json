{
  "name": "moonclock",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "app:dev": "next dev",
    "app:test": "APP_ENV=test next dev",
    "app:build": "next build",
    "app": "next start -p 80",
    "lint": "next lint",
    "hardware:dev": "tsx hardware/index.ts --brightness 30 --emulate true",
    "hardware": "tsx hardware/index.ts --brightness 30",
    "start:dev": "concurrently \"npm run app:dev\" \"npm run hardware:dev\"",
    "start": "concurrently \"npm run app\" \"npm run hardware\"",
    "test:e2e": "playwright test",
    "test": "APP_ENV=test tsx --test"
  },
  "dependencies": {
    "@mantine/core": "^7.15.1",
    "@mantine/form": "^7.15.1",
    "@mantine/hooks": "^7.15.1",
    "@mantine/notifications": "^7.15.2",
    "@tabler/icons-react": "^3.24.0",
    "commander": "^12.1.0",
    "next": "15.1.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rpi-led-matrix": "^1.14.0",
    "canvas": "2.11.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@types/node": "^20",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "concurrently": "^9.1.0",
    "eslint": "^8",
    "eslint-config-next": "15.0.4",
    "postcss": "^8.4.49",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "timekeeper": "^2.3.1",
    "tsx": "^4.19.2",
    "typescript": "^5"
  },
  "overrides": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0"
  }
}
